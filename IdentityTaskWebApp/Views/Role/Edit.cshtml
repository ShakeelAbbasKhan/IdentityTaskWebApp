@using Microsoft.AspNetCore.Identity
@model IdentityRole

<h2>Edit Role</h2>

<form asp-controller="Role" asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label for="roleName">Role Name</label>
        <input type="text" class="form-control" id="roleName" name="Name" value="@Model.Name" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
<a asp-controller="Role" asp-action="Index" class="btn btn-secondary">Back to Roles</a>
