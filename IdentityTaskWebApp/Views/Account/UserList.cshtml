@using IdentityTaskWebApp.ViewModels
@model List<UserListVM>

<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-controller="Role" asp-action="AssignRoles" asp-route-userId="@user.Id">Assign Roles</a>

                    <a asp-controller="Account" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <form asp-controller="Account" asp-action="Delete" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
